<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog Page</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <form class="mb-3" method="post" action="/blog" enctype="multipart/form-data">
            <div class="mt-3">
                <label for="coverImage" class="form-label">Add Cover Image</label>
                <input type="file" class="=form-control" id="coverImage" name="coverImage" aria-label="Add Cover Image">
            </div>
            <div class="mb-3">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Add Title..">
            </div>
            <div class="mb-3">
                <label for="body">Body</label>
                <textarea class="form-control" placeholder="Add content here" id="body" name="body" style="height: 100px"></textarea>
                
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary" >Add</button>
            </div>  
        </form>
    </div>

    <%- include('./partials/scripts') %>
</body>
    
</html>