<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
    <style>
        .container-xl {
        padding: 20px;
        margin: 0 auto;
        max-width: 800px;
        }  
        body{
            background-color: aliceblue;
        }


    </style>
</head>
<body >
    <%- include('./partials/nav') %>

    <div class="container-xl">

        <h1 class="blog-title"><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="100%" class="blog-image">
        <div class="lh-base">
        <div class="container font-family-sans-serif" style="white-space: pre-wrap; word-wrap: break-word;">
            <%= blog.body %>
        </div>
        </div>
        
    </div>
    <div class="container-xl">
        <img src="/<%= blog.createdBy.profileImageURL %>" width="15%" class="img-thumbnail">
        <%= blog.createdBy.firstName %> <%= blog.createdBy.lastName %>
    </div>
    <div class="container-xl">
        <h4>Comments</h4>
    </div>

    <div class="row d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-0 border" style="background-color: #f0f2f5;">
      <div class="card-body p-4">

        <form class="container-xl" action="/blog/comment/<%= blog._id %>" method="post">
            <div class="form-data">
                <textarea class="form-control" placeholder="Add your comment" name="content" id="content" style="height: 100px"></textarea>
            </div>
            <button class="btn btn-primary" style="margin-top: 10px;">Post</button>
        </form>


        <% comments.forEach(comment => { %>
         
        
        <div class="card mb-4">
          <div class="card-body">
            <p><%= comment.content %></p>

            <div class="d-flex justify-content-between">
              <div class="d-flex flex-row align-items-center">
                <img src="/<%= comment.createdBy.profileImageURL %>" alt="avatar" width="25"
                  height="25" />
                <p class="small mb-0 ms-2"><%= comment.createdBy.username %></p>
              </div>
              <div class="d-flex flex-row align-items-center">
                <p class="small text-muted mb-0">Upvote?</p>
                <i class="far fa-thumbs-up mx-2 fa-xs text-body" style="margin-top: -0.16rem;"></i>
                <p class="small text-muted mb-0">3</p>
              </div>
            </div>
          </div>
        </div>

        <% }) %>

        </div>
        </div>
      </div>
    </div>
  </div>
</div>


    </div>



    <%- include('./partials/scripts') %>
</body>
    
</html>